{
  "name": "voronator",
  "version": "1.0.0",
  "description": "Compute the Voronoi diagram of a set of two-dimensional points.",
  "keywords": [
    "voronoi",
    "delaunay",
    "geometry"
  ],
  "homepage": "https://github.com/observablehq/voronator",
  "repository": "https://github.com/observablehq/voronator",
  "license": "ISC",
  "author": {
    "name": "Mike Bostock",
    "url": "https://bost.ocks.org/mike"
  },
  "main": "dist/voronator.js",
  "unpkg": "dist/voronator.min.js",
  "module": "src/index.js",
  "@std/esm": {
    "esm": "js",
    "cjs": true
  },
  "devDependencies": {
    "@observablehq/tape": "~0.0.1",
    "@std/esm": "^0.15.0",
    "delaunator": "^1.0.5",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^3.0.0",
    "tape": "4"
  },
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c",
    "postpublish": "git push && git push --tags && zip -j dist/voronator.zip -- LICENSE README.md dist/voronator.js dist/voronator.min.js",
    "prepublishOnly": "yarn test && npm run build",
    "test": "tape -r @std/esm 'test/**/*-test.js'"
  }
}
